{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build release",
            "type": "shell",
            "command": "zig build -Doptimize=ReleaseFast",
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "build debug",
            "type": "shell",
            "command": "zig build -Doptimize=Debug",
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "test",
            "type": "shell",
            "command": "zig test",
            "group": {
                "kind": "test",
                "isDefault": false
            }
        },
        {
            "label": "build & run",
            "type": "shell",
            "command": "zig build run",
            "group": {
                "kind": "none",
                "isDefault": true
            }
        }
    ]
}
